<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="4.0"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>dev.kurama.control.Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>dev.kurama.control.Logout</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Encuesta</servlet-name>
    <servlet-class>dev.kurama.control.Encuesta</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UsuarioDetail</servlet-name>
    <servlet-class>dev.kurama.control.UsuarioDetail</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Admin</servlet-name>
    <servlet-class>dev.kurama.control.Admin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminUsuarios</servlet-name>
    <servlet-class>dev.kurama.control.AdminUsuarios</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminUsuario</servlet-name>
    <servlet-class>dev.kurama.control.AdminUsuario</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Encuesta</servlet-name>
    <url-pattern>/encuesta</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UsuarioDetail</servlet-name>
    <url-pattern>/usuario</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Admin</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminUsuarios</servlet-name>
    <url-pattern>/admin/usuarios</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminUsuario</servlet-name>
    <url-pattern>/admin/usuario</url-pattern>
  </servlet-mapping>
</web-app>